upstream app-hosts {
{% for host in groups['appserver'] %}
    server {{ host }}:8000;
{% endfor %}
}

server {
   listen 80;
   server_name {{ domain_name }} www.{{ domain_name }};

   location / {
      proxy_pass http://app-hosts;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
   }
}